<UserControl
    x:Class="DigitalNumericUpdown.SevenSegmentModule"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DigitalNumericUpdown"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    SnapsToDevicePixels="False"
    mc:Ignorable="d"
    Background="White"
    >
    <UserControl.Resources>
        <ResourceDictionary>
            <local:OpacityConverter x:Key="OConverter"></local:OpacityConverter>
            <RadialGradientBrush x:Key="LimeGlow">
                <GradientStop Color="#FF56F956" Offset="0"/>
                <GradientStop Color="Lime" Offset="1"/>
            </RadialGradientBrush>
            <RadialGradientBrush x:Key="RedGlow">
                <GradientStop Color="#FFF95656" Offset="0"/>
                <GradientStop Color="Red" Offset="1"/>
            </RadialGradientBrush>
            <RadialGradientBrush x:Key="BlueGlow">
                <GradientStop Color="#FF566CF9" Offset="0"/>
                <GradientStop Color="#FF2525FF" Offset="1"/>
            </RadialGradientBrush>
            <RadialGradientBrush x:Key="YellowGlow">
                <GradientStop Color="#FFFFFF65" Offset="0"/>
                <GradientStop Color="Yellow" Offset="1"/>
            </RadialGradientBrush>
            <RadialGradientBrush x:Key="OrangeGlow">
                <GradientStop Color="#FFFBC259" Offset="0"/>
                <GradientStop Color="Orange" Offset="1"/>
            </RadialGradientBrush>
            <RadialGradientBrush x:Key="PurpleGlow">
                <GradientStop Color="#FF7A397A" Offset="0"/>
                <GradientStop Color="Purple" Offset="1"/>
            </RadialGradientBrush>
            <BooleanToVisibilityConverter x:Key="VisibleIfTrueConverter" />
            
            
            <PathFigure IsClosed="True" StartPoint="52.5,0" x:Key="SegmentOneSlantPathFigure">
                <LineSegment Point="138.9,0"/>
                <LineSegment Point="146.7,8.7"/>
                <LineSegment Point="128.3,24"/>
                <LineSegment Point="54.6,24"/>
                <LineSegment Point="41.4,9.4"/>
            </PathFigure>
            <PathFigure IsClosed="True" StartPoint="38.5,11.6" x:Key="SegmentTwoSlantPathFigure">
                <LineSegment Point="51.8,26.1"/>
                <LineSegment Point="41.9,97.4"/>
                <LineSegment Point="27.3,109.5"/>
                <LineSegment Point="17.6,99.0"/>
                <LineSegment Point="28.6,20.0"/>
            </PathFigure>
            <PathFigure IsClosed="True" StartPoint="130.8,26.8" x:Key="SegmentThreeSlantPathFigure">
                <LineSegment Point="149.2,11.3"/>
                <LineSegment Point="156,18.9"/>
                <LineSegment Point="144.4,100.0"/>
                <LineSegment Point="133.1,109.3"/>
                <LineSegment Point="121,96.1"/>
            </PathFigure>
            <PathFigure IsClosed="True" StartPoint="44.5,100" x:Key="SegmentFourSlantPathFigure">
                <LineSegment Point="119.9,100"/>
                <LineSegment Point="130.3,111.7"/>
                <LineSegment Point="115.4,124"/>
                <LineSegment Point="40.3,124"/>
                <LineSegment Point="29.7,112"/>
            </PathFigure>
            <PathFigure IsClosed="True" StartPoint="3.2,200.8" x:Key="SegmentFiveSlantPathFigure">
                <LineSegment Point="13.7,125.7"/>
                <LineSegment Point="26.9,114.5"/>
                <LineSegment Point="37.7,126.5"/>
                <LineSegment Point="27.8,197.2"/>
                <LineSegment Point="12,210.6"/>
            </PathFigure>
            <PathFigure IsClosed="True" StartPoint="106.5,198" x:Key="SegmentSixSlantPathFigure">
                <LineSegment Point="116.6,128"/>
                <LineSegment Point="132.8,114.5"/>
                <LineSegment Point="141.1,123.8"/>
                <LineSegment Point="130.1,201.6"/>
                <LineSegment Point="118.5,211.5"/>
            </PathFigure>
            <PathFigure IsClosed="True" StartPoint="30.3,200" x:Key="SegmentSevenSlantPathFigure">
                <LineSegment Point="103.3,200"/>
                <LineSegment Point="115.6,213.6"/>
                <LineSegment Point="103.3,224"/>
                <LineSegment Point="24,224"/>
                <LineSegment Point="14.4,213.2"/>
            </PathFigure>
            <PathFigureCollection x:Key="Segments">
                <StaticResource ResourceKey="SegmentOneSlantPathFigure" />
                <StaticResource ResourceKey="SegmentTwoSlantPathFigure" />
                <StaticResource ResourceKey="SegmentThreeSlantPathFigure" />
                <StaticResource ResourceKey="SegmentFourSlantPathFigure" />
                <StaticResource ResourceKey="SegmentFiveSlantPathFigure" />
                <StaticResource ResourceKey="SegmentSixSlantPathFigure" />
                <StaticResource ResourceKey="SegmentSevenSlantPathFigure" />
            </PathFigureCollection>


        </ResourceDictionary>
        
    </UserControl.Resources>

    <Grid x:Name="_grid"
        Opacity=".95"
        
        Background="{Binding BackgroundFill, FallbackValue=Black}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="56"/>
            <RowDefinition Height="56"/>
        </Grid.RowDefinitions>
        
        <Path x:Name="_topTouch" 
                   Panel.ZIndex="6"
              Opacity="0.5"
                   Fill="{Binding TopTouchFill}" 
                   Visibility="{Binding Changeable, Converter={StaticResource VisibleIfTrueConverter}}"
                   Grid.Row="0">
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure IsClosed="True">
                            <LineSegment Point="29,21"/>
                            <LineSegment Point="59.7,21"/>
                            <LineSegment Point="55.4,50.2"/>
                            <LineSegment Point="25,50.2"/>
                            <LineSegment Point="29,21"/>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
        <Path x:Name="_bottomTouch" 
              Opacity="0.5"
                   Fill="{Binding BottomTouchFill}"
                   Visibility="{Binding Changeable, Converter={StaticResource VisibleIfTrueConverter}}"
                   Panel.ZIndex="6"
                   Grid.Row="1">
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure IsClosed="True">
                            <LineSegment Point="23,6"/>
                            <LineSegment Point="54,6"/>
                            <LineSegment Point="49.6,35"/>
                            <LineSegment Point="19,35"/>
                            <LineSegment Point="23,6"/>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>
        <StackPanel 
            Panel.ZIndex="1"
            Grid.RowSpan="2"
        
        Orientation="Horizontal"
        >

            <Grid Width="78" Height="112">
                <Viewbox 
                    Margin="0,10"
                    Panel.ZIndex="4">
                    <Canvas 
                        
                        Width="156"
                Height="224">

                        <Path Fill="Black" StrokeThickness="0" Panel.ZIndex="6">
                            <Path.Effect>
                                <DropShadowEffect BlurRadius="12" ShadowDepth="3" />
                            </Path.Effect>
                            <Path.Data>
                                <CombinedGeometry GeometryCombineMode="Xor">
                                    <CombinedGeometry.Geometry1>
                                        <EllipseGeometry RadiusX="18" RadiusY="18" Center="146.5,212.5" />
                                    </CombinedGeometry.Geometry1>
                                    <CombinedGeometry.Geometry2>
                                        <EllipseGeometry RadiusX="12" RadiusY="12" Center="146.5,212.5" />
                                    </CombinedGeometry.Geometry2>
                                </CombinedGeometry>
                            </Path.Data>
                        </Path>
                        <Ellipse
                        x:Name="_Ellipse_DecimalPlace"
                            Panel.ZIndex="5"
                        Margin="132, 199, 0,0"
                        Width="30"
                        Height="30"
                        Opacity="1"
                        Fill="{Binding SegmentFill, FallbackValue=Lime}"
                        StrokeThickness="1" >
                            <Ellipse.Stroke>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="Black"/>
                                    <GradientStop Color="White" Offset="1"/>
                                </LinearGradientBrush>
                            </Ellipse.Stroke>
                        </Ellipse>
                        <Path
                    Name="_segmentOneMask"
                       Panel.ZIndex="4"
                            Opacity=".99"
                            Fill="Black"
                        StrokeThickness="0"
                        >
                            <Path.Data>
                                <CombinedGeometry GeometryCombineMode="Xor">
                                    <CombinedGeometry.Geometry1>
                                        <RectangleGeometry Rect="0,-10,156,234"/>
                                    </CombinedGeometry.Geometry1>
                                    <CombinedGeometry.Geometry2>
                                        <PathGeometry Figures="{StaticResource Segments}"/>
                                    </CombinedGeometry.Geometry2>

                                </CombinedGeometry>
                            </Path.Data>
                            <Path.Effect>
                                <DropShadowEffect BlurRadius="12" ShadowDepth="3" />
                            </Path.Effect>
                        </Path>
                    </Canvas>
                </Viewbox>
                
                <Viewbox
            x:Name="_viewBox_eight"
                Margin="0,10"
            >
                    
                    <Canvas
                
                Name="_canvas"
                Width="156"
                Height="224">
                        <!--<Canvas.Effect>
                            <DropShadowEffect BlurRadius="5" 
                           ShadowDepth="7" 
                           Opacity="0.5"
                           Color="Black"/>
                        </Canvas.Effect>-->
                        <Path
                    Name="_segmentOneFront"
                        Panel.ZIndex="3"
                        Opacity="{Binding SegmentOneOn, Converter={StaticResource OConverter}}"
                        StrokeThickness="0"
                        
                            Fill="{Binding SegmentFill, FallbackValue=Lime}"
                        >
                            <Path.Data>
                                <PathGeometry>
                                    <StaticResource ResourceKey="SegmentOneSlantPathFigure" />
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                        
                        <Path
                    Name="_segmentTwoFront"
                            Panel.ZIndex="3"
                        Opacity="{Binding SegmentTwoOn, Converter={StaticResource OConverter}}"
                        StrokeThickness="0"
                        
                        Fill="{Binding SegmentFill, FallbackValue=Lime}"
                        >
                            <Path.Data>
                                <PathGeometry>
                                    <StaticResource ResourceKey="SegmentTwoSlantPathFigure" />
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                        
                        <Path
                    Name="_segmentThreeFront"
                    Panel.ZIndex="3"
                        Opacity="{Binding SegmentThreeOn, Converter={StaticResource OConverter}}"
                        
                        StrokeThickness="0"
                        
                            Fill="{Binding SegmentFill, FallbackValue=Lime}"
                        >
                            <Path.Data>
                                <PathGeometry>
                                    <StaticResource ResourceKey="SegmentThreeSlantPathFigure" />
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                        
                        <Path
                    Name="_segmentFourFront"
                            Panel.ZIndex="3"
                        Opacity="{Binding SegmentFourOn, Converter={StaticResource OConverter}}"
                         
                        StrokeThickness="0"
                        
                            Fill="{Binding SegmentFill, FallbackValue=Lime}"
                        >
                            <Path.Data>
                                <PathGeometry>
                                    <StaticResource ResourceKey="SegmentFourSlantPathFigure" />
                                </PathGeometry>
                            </Path.Data>
                        </Path>

                        <Path
                    Name="_segmentFiveFront"  
                            Panel.ZIndex="3"
                        Opacity="{Binding SegmentFiveOn, Converter={StaticResource OConverter}}"
                        StrokeThickness="0"
                        
                            Fill="{Binding SegmentFill, FallbackValue=Lime}"
                        >
                            <Path.Data>
                                <PathGeometry>
                                    <StaticResource ResourceKey="SegmentFiveSlantPathFigure" />
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                        
                        <Path
                    Name="_segmentSixFront"
                            Panel.ZIndex="3"
                        Opacity="{Binding SegmentSixOn, Converter={StaticResource OConverter}}"
                        StrokeThickness="0"
                        
                            Fill="{Binding SegmentFill, FallbackValue=Lime}"
                        >
                            <Path.Data>
                                <PathGeometry>
                                    <StaticResource ResourceKey="SegmentSixSlantPathFigure" />
                                </PathGeometry>
                            </Path.Data>
                        </Path>
                        
                        <Path
                    Name="_segmentSevenFront"
                            Panel.ZIndex="3"
                        Opacity="{Binding SegmentSevenOn, Converter={StaticResource OConverter}}"
                        StrokeThickness="0"
                        
                            Fill="{Binding SegmentFill, FallbackValue=Lime}"
                        >
                            <Path.Data>
                                <PathGeometry>
                                    <StaticResource ResourceKey="SegmentSevenSlantPathFigure" />
                                </PathGeometry>
                            </Path.Data>
                        </Path>

                    </Canvas>
                </Viewbox>
            </Grid>
            
            <Viewbox x:Name="_viewBox_Colon"
                     Height="112"
                     >
                <Canvas 
                    Height="224"
                    Width="32"
                >
                    <Ellipse 
                        Margin="8,58,0,0"
                        Opacity="1"
                        Fill="{Binding SegmentFill, FallbackValue=Lime}"
                        Width="24"
                        StrokeThickness="0"
                        Height="24"/>
                    <Ellipse 
                        Margin="0,128,0,0"
                        Opacity="1"
                        Fill="{Binding SegmentFill, FallbackValue=Lime}"
                        Width="24"
                        StrokeThickness="0"
                        Height="24"/>
                </Canvas>
            </Viewbox>
        </StackPanel>
    </Grid>
    
</UserControl>