<UserControl x:Class="DigitalNumericUpdown.Clock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DigitalNumericUpdown"
             mc:Ignorable="d" 
             Background="Black"
             >
    <StackPanel Orientation="Horizontal" Margin="5">
        <local:SevenSegmentLED x:Name="_moduleH_"/>
        <local:SevenSegmentLED x:Name="_module_H"/>
        <local:SevenSegmentLED x:Name="_moduleM_"/>
        <local:SevenSegmentLED x:Name="_module_M"/>
        <local:SevenSegmentLED x:Name="_moduleS_"/>
        <local:SevenSegmentLED x:Name="_module_S"/>
    </StackPanel>
</UserControl>
